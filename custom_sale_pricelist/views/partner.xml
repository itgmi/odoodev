<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="product_product___view_custom_gr" model="ir.ui.view">
        <field name="name">res.partner.on</field>
        <field name="model">res.partner</field>
        <field name="inherit_id"
               ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="id" invisible="1"/>
            </field>
            <field name="property_product_pricelist" position="attributes">
                <attribute name="domain">[('partner_id', 'in', [id, False])]</attribute>
            </field>
        </field>
     </record>
</odoo>