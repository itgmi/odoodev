<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="view_order_form_inherit_view_update" model="ir.ui.view">
        <field name="name">view.order.form.inherit.view.update</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_update_prices']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'in', ['sale', 'done', 'cancel'])]}</attribute>
            </xpath>
        </field>
     </record>
</odoo>