<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_view" model="ir.ui.view">
        <field name="name">view.order.form.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree" position="inside">
                <button name="pricelist_apply" type="object" string="Apply"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='name']" position="after">
                <button name="pricelist_apply" class="btn btn-primary" type="object" string="Apply"/>
            </xpath>
        </field>
    </record>
</odoo>