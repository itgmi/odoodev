<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="available_stock_model_tree" model="ir.ui.view">
        <field name="name">available_stock</field>
        <field name="model">available.stock</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="free_qty"/>
            </tree>
        </field>
    </record>
    <record id="available_stock_model_form" model="ir.ui.view">
        <field name="name">available stock</field>
        <field name="model">available.stock</field>
        <field name="arch" type="xml">
            <form create="0">
                <style>
                    .button_change{
                        margin-left: 93%;
                    }
                </style>
                <sheet>
                    <button type="object" name="change_image" string="Apply" class="btn btn-secondary button_change"/>
                    <field name="image_show" invisible="1"/>
                    <field name="image_1928" widget="image" class="oe_avatar" attrs="{'invisible':[('image_show','=',True)]}"/>
                    <field name="image_1929" widget="image" class="oe_avatar" attrs="{'invisible':[('image_show','=',False)]}"/>
                    <div class="oe_title">
                        <label for="name" string="Product Name"/>
                        <h1>
                            <div class="d-flex">
                                <field class="text-break" name="name" />
                            </div>
                        </h1>
                    </div>
                <group>
                        <group>
                            <field name="mer_title"/>
                            <field name="mer_category"/>
                            <field name="mer_images"/>
                            <field name="mer_upc_"/>
                            <field name="free_qty" string="Available Quantity"/>
                            <field name="mer_price"/>
                            <field name="mer_currency_id"/>
                            <field name="mer_condition"/>
                            <field name="mer_listing_type"/>
                            <field name="mer_description"/>
                        </group>
                        <group>
                            <field name="mer_shipping_method"/>
                            <field name="mer_shipping_cost"/>
                            <field name="mer_local_pickup"/>
                            <field name="mer_warranty_type"/>
                            <field name="mer_warranty_time"/>
                            <field name="mer_warranty_uom"/>
                            <field name="mer_brand"/>
                            <field name="mer_mlm"/>
                            <field name="sku" string="SKU"/>
                            <field name="model" string="Model"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <record id="available_stock_model_action_server" model="ir.actions.server">
        <field name="name">MercadoLibre</field>
        <field name="model_id" ref="mercadolibre.model_available_stock"/>
        <field name="state">code</field>
        <field name="code">action = model.sample_function()</field>
    </record>
    <menuitem id="available_stock_gr"
              name="MercadoLibre"
              parent="sale.product_menu_catalog"
              sequence="120"
              action="available_stock_model_action_server"/>
</odoo>